\newcommand{\VertexM}[2][]{%
  \begingroup
  \setkeys[GR]{MVx}{#1}%
  \edef\x@start{\cmdGR@MVx@xa}
  \edef\y@start{\cmdGR@MVx@ya}
  \edef\x@final{\cmdGR@MVx@xb}
  \edef\y@final{\cmdGR@MVx@yb}
  \edef\Vx@appears{\cmdGR@MVx@shows}
  \edef\Vx@StartsMoving{\cmdGR@MVx@starts}
  \edef\Vx@StopsMoving{\cmdGR@MVx@stops}
  \pgfmathsetmacro{\last@still}{\Vx@StartsMoving-1}
  \foreach\iso@index in {\Vx@appears,...,\last@still}{%
    \only<\iso@index>{\Vertex[x=\x@start,y=\y@start]{#2}}
  }
  \foreach\iso@index in {\Vx@StartsMoving,...,\Vx@StopsMoving}{%
    \pgfmathsetmacro{\lambdapar}%
    {(1/(\Vx@StopsMoving-\Vx@StartsMoving))*(\iso@index-\Vx@StartsMoving)}
    \pgfmathsetmacro{\pos@x}{(1-\lambdapar)*\x@start+\lambdapar*\x@final}
    \pgfmathsetmacro{\pos@y}{(1-\lambdapar)*\y@start+\lambdapar*\y@final}
    \only<\iso@index>{\Vertex[x=\pos@x,y=\pos@y]{#2}}
  }
  \endgroup
}

\newcommand{\EdgeM}[3][]{%
  \begingroup
  \setkeys[GR]{MEe}{#1}%
  \pgfmathsetmacro{\last@still}{\cmdGR@MEe@starts-1}
  \foreach\iso@index in {\cmdGR@MEe@shows,...,\last@still}{%
    \only<\iso@index>{\Edge[style={bend \cmdGR@MEe@bends=\cmdGR@MEe@bendsfrom}](#2)(#3)}
  }
  \foreach\iso@index in {\cmdGR@MEe@starts,...,\cmdGR@MEe@stops}{%
    \pgfmathsetmacro{\the@bend}%
    {(\cmdGR@MEe@bendsfrom/%
      (\cmdGR@MEe@starts-\cmdGR@MEe@stops))*(\iso@index-\cmdGR@MEe@stops)}
    \only<\iso@index>{\Edge[style={bend \cmdGR@MEe@bends=\the@bend}](#2)(#3)}
  }
  \endgroup
}

